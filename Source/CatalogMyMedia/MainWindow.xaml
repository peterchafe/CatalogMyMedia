<Window x:Class="CatalogMyMedia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatalogMyMedia"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="CatalogMyMedia" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Bottom" LastChildFill="True">
                <Label Content="Title:"/>                
                <Button x:Name="cmdSave" Click="Save_Click" Margin="5" Width="124" DockPanel.Dock="Right">Save</Button>
                <Button x:Name="CreateSnapshot" Click="CreateSnapshot_Click" Margin="5" Width="124" DockPanel.Dock="Right">Take Picture</Button>
                <TextBox x:Name="txtName" Margin="5" />
            </DockPanel>
            <vlc:VideoView x:Name="videoView"/>
        </DockPanel>
    </Grid>
</Window>
